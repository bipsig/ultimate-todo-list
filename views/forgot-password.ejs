<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="styles/forgot-password.css" />
    <title>Forgot Password</title>
</head>
<body>
    <div class="forgot-password-wrap">
        <div class="forgot-password-html">
            <div class="forgot-password-form">
                <h2>Forgot Password</h2>
                <form action="/forgot-password" method="POST">
                    <div class="group">
                        <label for="forgot-username" class="label">Username</label>
                        <input id="forgot-username" name="username" type="text" class="input" required>
                    </div>
                    <div class="group">
                        <label for="forgot-email" class="label">Email Address</label>
                        <input id="forgot-email" name="email" type="email" class="input" required>
                    </div>
                    <div class="group">
                        <label for="forgot-dob" class="label">Date of Birth</label>
                        <input id="forgot-dob" name="dob" type="date" class="input" required>
                    </div>
                    <!-- Error and success messages will be displayed here -->
                    <% if (locals.forgotPasswordError) { %>
                        <div class="error-message"><%= forgotPasswordError %></div>
                    <% } %>
                    <% if (locals.forgotPasswordSuccess) { %>
                        <div class="success-message"><%= forgotPasswordSuccess %></div>
                    <% } %>
                    <div class="group">
                        <input type="submit" class="button" value="Submit">
                    </div>
                </form>
                <div class="back-link">
                    <a href="/">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
